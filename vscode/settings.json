{
    "vscode-neovim.compositeKeys": {
        "jj": {
            "command": "vscode-neovim.escape",
        },
    },
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
    "window.customTitleBarVisibility": "never",
    "window.titleBarStyle": "native",
    "apc.electron": {
        "titleBarStyle": "hidden",
        // "opacity": 0.9
    },
    "apc.menubar.compact": true,
    "window.menuBarVisibility": "toggle",
    "apc.activityBar": {
        "position": "bottom",
        "hideSettings": true,
        "size": 28
    },
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,
    "breadcrumbs.enabled": true,
    "reactSnippets.settings.importReactOnTop": false,
    "editor.cursorBlinking": "phase",
    "editor.find.cursorMoveOnType": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "git.openRepositoryInParentFolders": "never",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.accessibilitySupport": "off",
    "git.autofetch": true,
    "workbench.layoutControl.enabled": false,
    "editor.lineHeight": 1.2,
    //////// ======================
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.mouseWheelZoom": true,
    // "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#8FBCBB",
        "statusBar.noFolderBackground": "#8FBCBB",
        "statusBar.debuggingBackground": "#026362",
        "statusBar.foreground": "#000",
        "statusBar.debuggingForeground": "#000",
    },
    // editor
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.linkedEditing": true,
    "editor.suggest.insertMode": "replace",
    // vs code settings for activity bar and all
    "workbench.tips.enabled": false,
    //explorer options
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // typescript
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    //extension settings ====>
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": true,
    //editor code actions ===>
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.sortImports": "explicit",
        "source.addMissingImports": "explicit"
    },
    "editor.fontFamily": "JetBrains Mono",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.minimap.enabled": false,
    "symbols.hidesExplorerArrows": true,
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "update.mode": "manual",
    "git.confirmSync": false,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.colorTheme": "Andromeda",
    "prisma.showPrismaDataPlatformNotification": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.perEditorGroup": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "workbench.productIconTheme": "material-product-icons",
    "editor.scrollbar.vertical": "hidden",
    "workbench.iconTheme": "symbols",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "github.copilot.preferredAccount": "the-vaibhav",
}