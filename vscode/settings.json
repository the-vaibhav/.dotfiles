    "window.menuBarVisibility": "toggle",
    // "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "hidden",
    // "workbench.statusBar.visible": false,
    "window.commandCenter": false,
    "window.title": "Patil",
    // neovim ===>
    "vscode-neovim.compositeKeys": {
        "jj": {
            "command": "vscode-neovim.escape",
        },
    },
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
    "html.autoclosingtags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,
    "breadcrumbs.enabled": true,
    "reactSnippets.settings.importReactOnTop": false,
    "editor.cursorBlinking": "phase",
    "editor.find.cursorMoveOnType": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "git.openRepositoryInParentFolders": "never",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.accessibilitySupport": "off",
    "git.autofetch": true,
    "workbench.layoutControl.enabled": false,
    "editor.lineHeight": 1.2,
    //////// ======================
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.mouseWheelZoom": true,
    // "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    // Status Bar customization --->
    "workbench.colorCustomizations": {
        "statusBar.background": "#8FBCBB",
        "statusBar.noFolderBackground": "#8FBCBB",
        "statusBar.debuggingBackground": "#026362",
        "statusBar.foreground": "#000",
        "statusBar.debuggingForeground": "#000",
    },
    // editor
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.linkedEditing": true,
    "editor.suggest.insertMode": "replace",
    // vs code settings for activity bar and all
    "workbench.tips.enabled": false,
    //explorer options
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // typescript
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    //extension settings ====>
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": true,
    //editor code actions ===>
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.sortImports": "explicit",
        "source.addMissingImports": "explicit"
    },
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.minimap.enabled": false,
    // use to fold the function and all
    "editor.folding": false,
    "symbols.hidesExplorerArrows": true,
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "update.mode": "manual",
    "git.confirmSync": false,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 4,
    "workbench.editor.limit.perEditorGroup": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "github.copilot.preferredAccount": "the-vaibhav",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "symbols",
    "terminal.integrated.fontFamily": "JetBRainsMono Nerd Font",
    "vscode-neovim.neovimClean": false,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.editor.showTabs": "none",
}